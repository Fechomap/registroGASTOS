{
  "name": "@financial-bot/database",
  "version": "1.0.0",
  "private": true,
  "description": "Base de datos y repositorios para el sistema financiero",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && tsc",
    "dev": "tsc --watch",
    "lint": "prisma generate && eslint src --ext .ts",
    "lint:fix": "prisma generate && eslint src --ext .ts --fix",
    "typecheck": "prisma generate && tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@financial-bot/shared": "workspace:*",
    "@prisma/client": "^5.7.1",
    "prisma": "^5.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0"
  }
}
